// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  uid            Int    @id @default(autoincrement())
  email          String @unique
  firstName      String
  lastName       String
  phoneNumber    String
  address        String
  salt           String
  saltedPassword String
  sessionToken   String
}

model Projects {
  pid          Int    @id @default(autoincrement())
  pname        String
  pdescription String
  funds        String
  pCategory    String
}
